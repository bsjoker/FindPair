<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start"
    tools:context=".StartActivity">

    <Button
        android:id="@+id/btn_game_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_new_game_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_game_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_continue"
        app:layout_constraintStart_toStartOf="@+id/btn_game_new"
        app:layout_constraintTop_toBottomOf="@+id/btn_game_new" />

    <Button
        android:id="@+id/btn_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_scores_big"
        app:layout_constraintStart_toStartOf="@+id/btn_game_continue"
        app:layout_constraintTop_toBottomOf="@+id/btn_game_continue" />
</androidx.constraintlayout.widget.ConstraintLayout>